{
  "manifest_version": 3,
  "name": "LinkedIn Feed Cleaner",
  "version": "1.0",
  "description": "Filter out noise and distractions on LinkedIn",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

